{
  "typings": "dist/index.d.ts",
  "scripts": {
    "precommit": "pretty-quick --staged",
    "lint": "tslint -p .",
    "jest": "jest --ci --coverage",
    "pretest": "npm run lint",
    "test": "npm run jest",
    "prebuild": "rimraf ./dist",
    "build": "tsc -p .",
    "prepublishOnly": "npm test && npm run build"
  },
  "devDependencies": {
    "@contactlab/tslint-config": "1.0.0",
    "@types/jest": "23.1.5",
    "@types/node": "10.5.2",
    "husky": "0.14.3",
    "jest": "23.4.0",
    "prettier": "1.13.7",
    "pretty-quick": "1.6.0",
    "rimraf": "2.6.2",
    "ts-jest": "23.0.0",
    "ts-node": "7.0.0",
    "tslint": "5.10.0",
    "tslint-config-prettier": "1.13.0",
    "typescript": "2.9.2"
  },
  "jest": {
    "automock": false,
    "bail": true,
    "coveragePathIgnorePatterns": ["<rootDir>/node_modules/"],
    "coverageReporters": ["text"],
    "roots": ["<rootDir>/test/"],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(\\.|/)spec\\.(js|ts)$",
    "moduleFileExtensions": ["ts", "js", "json", "node"],
    "globals": {
      "ts-jest": {
        "enableTsDiagnostics": true
      }
    }
  }
}
